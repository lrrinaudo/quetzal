Resumenes::App.mailer :notificacion do

  email :info_email do | notificacion_resumen |
    from 'no_reply@unq.com'
    to notificacion_resumen.alumno_email
    subject 'Notificacion Resumen: Informacion de Contacto'
    locals :resumen => notificacion_resumen.resumen
    content_type :plain
    render 'notificacion/info_email'
  end

end
