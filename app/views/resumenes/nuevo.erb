 <%= f.label :ausentes %> <%= f.text_field :ausentes, :value => "Nombre/s" %> 
<%= f.label :descripcion %> 
<%= f.text_area :descripcion, :cols => 2000, :rows =>3, :value => "Ajustar a tamaÃ±o conveniente" %>


