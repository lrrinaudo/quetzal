<h1>Lista de Resumenes</h1>

<table class="table table-bordered">
	<tr>
		<th> Fecha </th>
		<th> Clase </th>
		<th> Autor </th>
		<th> Resumen </th>
		
	</tr>
	<% @resumenes.each do | resumen | %>

	<tr>
		<td>
			<%= resumen.fecha %>
		</td>
		<td>Resumen Clase
			<%= resumen.num_clase %>
		</td>
		<td>
			<%= resumen.alumno.nombre%>
			<%= resumen.alumno.apellido%>
		</td>
			
		<td>
			<%= link_to 'Ver', url_for(:resumenes, :ver), :class => "btn btn-primary" %>
			
		</td>		
	</tr>

  <% end %>

</table>
